# Free Asset Pipeline - Environment Variables Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# Asset API Keys
# =============================================================================

# Pexels API Key
# Get your key at: https://www.pexels.com/api/
# Free tier: 200 requests/hour, 20,000/month
PEXELS_API_KEY=your_pexels_api_key_here

# Pixabay API Key
# Get your key at: https://pixabay.com/api/docs/
# Free tier: 5,000 requests/hour
PIXABAY_API_KEY=your_pixabay_api_key_here

# Unsplash Access Key
# Get your keys at: https://unsplash.com/developers
# Free tier: 50 requests/hour
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here
UNSPLASH_SECRET_KEY=your_unsplash_secret_key_here

# Freesound API Key
# Get your key at: https://freesound.org/apiv2/apply/
# Free tier: Generous limits for non-commercial use
FREESOUND_API_KEY=your_freesound_api_key_here

# Giphy API Key
# Get your key at: https://developers.giphy.com/
# Free tier: 100 requests/hour (beta), upgradable
GIPHY_API_KEY=your_giphy_api_key_here

# =============================================================================
# Supabase Configuration
# =============================================================================

# Supabase Project URL
# Find at: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_URL=https://your-project.supabase.co

# Supabase Service Role Key (keep secret!)
# Find at: https://app.supabase.com/project/_/settings/api
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# Supabase Anon Key (public-facing)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# AI/LLM API Keys
# =============================================================================

# OpenAI API Key
# Get your key at: https://platform.openai.com/api-keys
# Required for: LangChain, AutoGen, and embedding generation
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional)
# Get your key at: https://console.anthropic.com/
# Required for: Claude models in agent workflows
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Google Cloud Configuration (for Vertex AI)
# =============================================================================

# Google Cloud Project ID
# Find at: https://console.cloud.google.com/
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Google Cloud Region
GOOGLE_CLOUD_REGION=us-central1

# Path to service account key file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# =============================================================================
# Application Configuration
# =============================================================================

# Node environment
NODE_ENV=development

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# MCP Server URL (if running separately)
MCP_SERVER_URL=http://localhost:8080

# =============================================================================
# Cache Configuration
# =============================================================================

# SQLite cache database path
CACHE_DB_PATH=./assets_cache.db

# Cache TTL in hours
CACHE_TTL_HOURS=24

# Maximum cache size in MB
MAX_CACHE_SIZE_MB=1000

# =============================================================================
# Rate Limiting
# =============================================================================

# Enable rate limiting
ENABLE_RATE_LIMITING=true

# Requests per minute per API
RATE_LIMIT_RPM=60

# =============================================================================
# Logging
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable request logging
LOG_REQUESTS=true

# =============================================================================
# Optional: Redis/Upstash (for distributed caching)
# =============================================================================

# REDIS_URL=your_redis_url_here
# UPSTASH_REDIS_REST_URL=your_upstash_url_here
# UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here
